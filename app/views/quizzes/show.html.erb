<!-- We iterate through the quizzes & we display the score of the last attemp -->
<h1><%= @quiz.title.html_safe %></h1>
<div class="scores">
  <% unless @attemps.last.nil? %>
    <% if @attemps.last.score >= 0.6 %>
      <h4>Well done! You have passed this test!</h4>
      <h4>Score: <%= (@attemps.last.score * 100).to_i %>%</h4>
    <% else %>
      <h4>Ouch, you have not passed this test! You need some train!</h4>
      <h4>Score: <%= (@attemps.last.score * 100).to_i %>%</h4>
    <% end %>
  <% end %>
</div>

<p>Difficulty: <%= @quiz.difficulty %></p>

<!-- We show a different button depending on whether we have made an attempt or not -->
<% if @attemps.size == 0 %>
  <%= simple_form_for [@quiz, @attemp] do |f| %>
    <%= f.button :submit, "Start!", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <%= simple_form_for [@quiz, @attemp] do |f| %>
    <%= f.button :submit, "Try again!", class: "btn btn-primary" %>
  <% end %>
<% end %>

